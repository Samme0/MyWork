@model Assignment7WebApp.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Assignment 7 - Generics";
}

<h2>@ViewData["Title"]</h2>

<!-- Buttons to generate lists -->
<form asp-action="CreateIntegers" method="post" style="display:inline;">
    <button type="submit">Create Integers</button>
</form>

<form asp-action="CreateDoubles" method="post" style="display:inline; margin-left:10px;">
    <button type="submit">Create Doubles</button>
</form>

<!-- Search form for integers -->
<form asp-action="Search" method="post" style="margin-top:15px;">
    <input type="hidden" name="listType" value="int" />
    <label>Search Integer:</label>
    <input type="text" name="searchKey" value="@Model.SearchKey" style="width:100px; margin-left:5px;" />
    <button type="submit" style="margin-left:10px;">Search Int</button>
</form>

<!-- Search form for doubles -->
<form asp-action="Search" method="post" style="margin-top:10px;">
    <input type="hidden" name="listType" value="double" />
    <label>Search Double:</label>
    <input type="text" name="searchKey" value="@Model.SearchKey" style="width:100px; margin-left:5px;" />
    <button type="submit" style="margin-left:10px;">Search Double</button>
</form>

<!-- Clear button -->
<form asp-action="Clear" method="post" style="margin-top:15px;">
    <button type="submit">Clear All</button>
</form>

<!-- List display -->
<h3 style="margin-top:20px;">Numbers:</h3>
<textarea readonly style="width:100%; height:150px; white-space:pre-wrap; overflow:hidden;">@Model.ListOfNumbers</textarea>

<!-- Search results -->
<h3 style="margin-top:20px;">Search Results:</h3>
<input readonly style="width:100%;" value="@Model.SearchResults" />

<p style="color:red;">@Model.Message</p>